@model Kisiler
@{
    ViewBag.Title = "Kişi Düzenle";
}

<h2>Kisi Düzenle</h2>
@using (Html.BeginForm())
{
    <div class="input-group">
        <span class="input-group-addon"> Ad</span>
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", placeholder = "Kişi Adı Giriniz", @required = "required" })
        @*<input type="text" class="form-control" placeholder="Yeni Kişi"/>*@
    </div>
    <br />
    <div class="input-group">
        <span class="input-group-addon"> Soyad</span>
        @Html.TextBoxFor(x => x.Soyad, new { @class = "form-control", placeholder = "Kişi Soyadı Giriniz", @required = "required" })
        @*<input type="text" class="form-control" placeholder="Yeni Kişi"/>*@
    </div>
    <br />
    <div class="input-group">
        <span class="input-group-addon"> Yas</span>
        @Html.TextBoxFor(x => x.Yas, new { @class = "form-control", placeholder = "Yaşı Giriniz", @type = "number", min = 1 })
        @*<input type="text" class="form-control" placeholder="Yeni Kişi"/>*@
    </div>
    <br />

    <div class="input-group">

        <input type="submit" value="Kaydet" class="btn btn-success" />


    </div>
    <br />
    <div class="input-group">
        @if (ViewBag.mesaj != null)
        {
            <div class="alert alert-@ViewBag.renk" role="alert">

                @ViewBag.mesaj
            </div>
        }
    </div>
}


